<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/redFive"
        android:layout_width="match_parent"
        android:layout_height="64dp">
        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_my_order_back"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="推荐"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_one"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="共"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="件"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_high"
            android:src="@mipmap/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_high"
            android:layout_alignParentRight="true"
            android:src="@mipmap/high_selte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
