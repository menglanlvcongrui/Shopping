<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.shopping.activity.SigninActivity">
<RelativeLayout
    android:padding="10dp"
    android:background="@color/redFive"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_sinnin"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:src="@mipmap/cancel"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_signin_cancle"
        android:layout_width="wrap_content"
        android:text="注册"
        android:layout_centerInParent="true"
        android:textSize="@dimen/text_size_one"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:text="请输入手机号"
            android:textSize="@dimen/text_size_two"
            android:textColor="@color/Treeblack"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="@dimen/text_size_two"
                android:hint="13218105401"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:text="请输入验证码"
            android:textSize="@dimen/text_size_two"
            android:textColor="@color/Treeblack"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="2535"
                android:textSize="@dimen/text_size_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textSize="@dimen/text_size_two"
                android:textColor="@color/yellowOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:text="请输入密码"
                android:textColor="@color/Treeblack"
                android:layout_height="wrap_content" />
            <EditText
                android:padding="5dp"
                android:hint="***************"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:text="注册"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_one"
        android:layout_gravity="center"
        android:background="@mipmap/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:text="已有帐号，直接"
            android:textColor="@color/Treeblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_logins"
            android:text="登录"
            android:textColor="@color/yellowOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
