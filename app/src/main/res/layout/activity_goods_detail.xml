<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.shopping.activity.GoodsDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redFive"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_one" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shopping_cart_count"
                android:text="3"
                android:textColor="@color/redFive" />
            <ImageView
                android:id="@+id/shopping_trolley"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shopping_trolley" />
        </RelativeLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
             <ImageView
                android:src="@mipmap/details_picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayFive"
                android:padding="10dp"
                android:text="韩国直邮KOLCA1992ALVERTVILLE男女共用休闲鞋（预定款）"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_two" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grayFive"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/redFive" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="499"
                    android:textColor="@color/redFive" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="颜色分类"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_two" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="黑色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="白色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="黄色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="蓝色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="红色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="粉色"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="大小尺码"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_two" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="35码"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="36码"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="37码"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="38码"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/goods_detail_background_selector"
                    android:text="39码"
                    android:textColor="@color/goods_detail_letter_color_selector"
                    android:textSize="@dimen/text_size_three" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/grayFive" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品产地：浙江杭州"
                    android:textColor="@color/Treeblack"
                    android:textSize="@dimen/text_size_two" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品品牌：齐腾"
                    android:textColor="@color/Treeblack"
                    android:textSize="@dimen/text_size_two" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="款式定位：经济型"
                    android:textColor="@color/Treeblack"
                    android:textSize="@dimen/text_size_two" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="材质面料：涤纶/纯棉"
                    android:textColor="@color/Treeblack"
                    android:textSize="@dimen/text_size_two" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用对象：青少年"
                    android:textColor="@color/Treeblack"
                    android:textSize="@dimen/text_size_two" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grayFive">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/add_shopping_cart_button"
                    android:gravity="center"
                    android:text="加入购物车"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
