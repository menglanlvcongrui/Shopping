<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayFive"
    android:orientation="vertical"
    tools:context="com.example.administrator.shopping.fragment.CircleFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/redFive"
        android:theme="@style/AppTheme.AppBarOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:text="我的圈子"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_one" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayFive" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_costume1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服饰圈"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_three" />

            <TextView
                android:id="@+id/tv_costume_details1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春季潮流新品宽松显瘦版高大上"
                android:textColor="@color/grayEleven"
                android:textSize="@dimen/text_size_four" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayFive" />

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_costume2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="皮革圈"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_three" />

            <TextView
                android:id="@+id/tv_costume_details2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春季潮流新品宽松显瘦版高大上"
                android:textColor="@color/grayEleven"
                android:textSize="@dimen/text_size_four" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/grayFive" />

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_costume3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鞋帽圈"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_three" />

            <TextView
                android:id="@+id/tv_costume_details3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春季潮流新品宽松显瘦版高大上"
                android:textColor="@color/grayEleven"
                android:textSize="@dimen/text_size_four" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/grayFive" />

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/circle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/iv3"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_costume4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服饰圈"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_three" />

            <TextView
                android:id="@+id/tv_costume_details4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="春季潮流新品宽松显瘦版高大上"
                android:textColor="@color/grayEleven"
                android:textSize="@dimen/text_size_four" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
