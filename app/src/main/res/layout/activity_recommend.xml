    <RelativeLayout
        android:padding="10dp"
        android:background="@color/redFive"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:id="@+id/iv_recommend_more_back"
                android:layout_width="wrap_content"
                android:src="@mipmap/back"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:text="推荐"
                android:layout_centerInParent="true"
                android:textSize="@dimen/text_size_one"
                android:textColor="@color/white"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/grayFive"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerVertical="false"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共" />
            <TextView
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18" />
            <TextView
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="件" />
        </LinearLayout>
        <RadioGroup
            android:layout_alignParentRight="true"
            android:id="@+id/rg"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_marginRight="10dp"
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:gravity="center"
                android:background="@null"
                android:checked="true"
                android:drawableTop="@drawable/recommend_high"
                />
            <RadioButton
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:background="@null"
                android:drawableTop="@drawable/recommend_low"
                />
        </RadioGroup>
    </RelativeLayout>

