<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.shopping.activity.ResetPasswordActivity">
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/redFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:padding="5dp"
            android:id="@+id/iv_reset_password_back"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:src="@mipmap/back"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="重置密码"
            android:layout_centerInParent="true"
            android:textSize="@dimen/text_size_two"
            android:textColor="@color/white"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="  请输入原密码"
        android:textSize="@dimen/text_size_two"
        android:textColor="@color/grayEleven"
        android:drawableLeft="@mipmap/icon02"
        />
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="  请输入新密码"
        android:textSize="@dimen/text_size_two"
        android:textColor="@color/grayEleven"
        android:drawableLeft="@mipmap/icon02"
        />
    <EditText
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext"
        android:hint="  请输入新密码"
        android:textSize="@dimen/text_size_two"
        android:textColor="@color/grayEleven"
        android:drawableLeft="@mipmap/icon02"
        />
    <TextView
        android:layout_margin="10dp"
        android:text="提交"
        android:textSize="@dimen/text_size_one"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@mipmap/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/tv_forget_passwordss"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/text_size_two"
            android:textColor="@color/Treeblack"
            android:layout_alignParentRight="true"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>-->
</LinearLayout>
