<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="239px"
        android:layout_height="160px"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/circle_display_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_height="wrap_content"
            android:text="精选进口优质原生木浆维达抽纸盒装超韧细密湿氺不破130抽不破"
            android:textColor="@color/Treeblack"
            android:textSize="@dimen/text_size_two" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/Treeblack"
            android:textSize="@dimen/text_size_two" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/redFive"
                android:textSize="@dimen/text_size_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/money"
                android:text="300"
                android:textSize="@dimen/text_size_two"
                android:textColor="@color/redFive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/jian"
                android:textSize="@dimen/text_size_two"
                android:text="3" />

            <TextView
                android:id="@+id/jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:text="件"
                android:textColor="@color/Treeblack"
                android:textSize="@dimen/text_size_two" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>